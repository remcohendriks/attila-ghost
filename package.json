{
  "name": "attila-custom",
  "description": "Ghost Theme",
  "version": "3.9.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "src/screenshot-desktop.jpg",
    "mobile": "src/screenshot-mobile.jpg"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Personal Blogs"
    ]
  },
  "keywords": [
    "ghost-theme",
    "ghost",
    "theme"
  ],
  "scripts": {
    "build:css": "sass src/sass/style.scss assets/css/style.css --style=compressed --no-source-map && postcss assets/css/style.css --replace",
    "build:js": "cat src/js/libs/reframe.min.js src/js/libs/highlight.pack.js src/js/script.js | esbuild --minify > assets/js/script.js",
    "build": "npm-run-all --parallel build:css build:js",
    "watch:css": "sass src/sass/style.scss assets/css/style.css --watch --style=expanded --source-map",
    "watch:js": "cat src/js/libs/reframe.min.js src/js/libs/highlight.pack.js src/js/script.js | esbuild > assets/js/script.js",
    "watch": "npm-run-all --parallel watch:css watch:js",
    "dev": "npm run watch",
    "zip": "npm run build && bestzip dist/attila-custom.zip * -x 'node_modules/*' 'src/*' 'dist/*' '.git/*' '.gitignore' 'Gruntfile.js' 'package-lock.json'"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "bestzip": "^2.2.1",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0"
  },
  "config": {
    "posts_per_page": 8,
    "image_sizes": {
      "s": {
        "width": 320
      },
      "m": {
        "width": 640
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1920
      }
    },
    "card_assets": true,
    "custom": {
      "color_scheme": {
        "type": "select",
        "options": [
          "Light",
          "Dark",
          "System"
        ],
        "default": "System"
      },
      "disqus_shortname": {
        "type": "text",
        "default": "",
        "group": "post"
      },
      "darkmode_accent_color": {
        "type": "color",
        "default": "#ff6633"
      },
      "post_share": {
        "type": "select",
        "options": [
          "Default",
          "Native",
          "Disabled"
        ],
        "default": "Default",
        "group": "post"
      }
    }
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "sass": "^1.89.2"
  }
}